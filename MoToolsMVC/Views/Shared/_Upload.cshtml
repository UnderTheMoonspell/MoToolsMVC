@model MoToolsMVC.ViewModel.UploadModel

@* ---------------------------------------------------------------------------------------------------------------------------------------------------- *@

<div id="ctl00_Content1_Panel1" class="divBegining" style="background-color:#E5E9EC;border-width:0px;width:98%;">
    <fieldset style="border-width: 0;">
        <br>
        <div id="ctl00_Content1_PanelDatatable" class="divBegining fullWidth whiteBackground">

            @* ---------------------------------------------------------------------------------------------------------------------------------------------------- *@

            @Styles.Render("~/CSS/Upload")

            <div class="upload-container">
                <div class="blockContainer">
                    <div class="caseTitleContainer">
                        <div class="caseTitle"><strong>Arquivos</strong></div>
                    </div>

                    <div class="labelInputContainer fullWidth">
                        <button class="attachment-popup-open">@Html.Raw(Model.UploadButtonName)</button>

                        <div class="upload-popup" style="display: none; font-size: 10px;">
                            <div class="alertify-cover"></div>
                            <div class="alertify alertify-confirm" style="top: 10%;">
                                <div class="alertify-dialog">
                                    @using (Html.BeginForm("SaveAttachment", "Team", FormMethod.Post, new { enctype = "multipart/form-data", @class="attachment-form" }))
                                    {
                                        <div class="alertify-inner">
                                            <p class="alertify-title">Arquivos</p>
                                            <div class="alertify-message">

                                                <div class="attachment-type-container alertify-message">
                                                    <label for="attachment-type">Tipo</label>
                                                    @Html.DropDownListFor(m => m.AttachmentTypes.SelectedOption, Model.AttachmentTypes.Options, new { @class = "attachment-type", @name = "attachment-type" })
                                                </div>

                                                <div class="attachment-file-form">
                                                    <input type="file" name="file" class="attachment-file" />
                                                </div>

                                            </div>

                                            <div class="alertify-buttons">
                                                <input type="submit" value="Cancelar" class="alertify-button alertify-button-cancel close-popup" name="close-popup" title="Cancelar">
                                                <input type="submit" value="Salvar" class="alertify-button alertify-button-ok save-attachment" name="save-attachment" title="Salvar Anexo">
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="attachments-list-container">
                    <span>Arquivos da atividade</span>
                    <div class="attachments-list">
                        <div class="emptyDataText">Sem arquivos</div>
                    </div>
                </div>
            </div>

            @Scripts.Render("~/bundles/Upload")

            @* ---------------------------------------------------------------------------------------------------------------------------------------------------- *@

        </div>
    </fieldset>
</div>